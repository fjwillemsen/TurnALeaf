{
  "name": "TurnALeaf",
  "productName": "TurnALeaf",
  "author": "Floris-Jan Willemsen",
  "version": "0.0.1",
  "description": "A fully offline, completely local Overleaf alternative that can switch to online Overleaf in the blink of an eye.",
  "main": ".vite/build/main.js",
  "license": "MIT",
  "private": "true",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "check-format": "npm run prettier -- --list-different",
    "validate-and-build": "npm-run-all --parallel check-types check-format lint build",
    "validate": "npm-run-all --parallel check-types && lint-staged",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "lint": "eslint .",
    "clean": "rimraf node_modules .vite package-lock.json yarn.lock",
    "postinstall": "husky init && cp node_modules/swiftlatex/dist/swift*.js node_modules/swiftlatex/dist/*.wasm public",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky",
    "test": "eslint . --quiet"
  },
  "keywords": [
    "latex",
    "app",
    "overleaf",
    "turnaleaf",
    "electron",
    "react",
    "typescript",
    "electron-forge",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fjwillemsen/TurnALeaf"
  },
  "dependencies": {
    "@aperturerobotics/chonky": "^0.3.0",
    "@aperturerobotics/chonky-icon-fontawesome": "^0.3.0",
    "@mantine/core": "^7.11.2",
    "@mantine/form": "^7.11.2",
    "@mantine/hooks": "^7.11.2",
    "@mantine/modals": "^7.11.2",
    "@mantine/notifications": "^7.11.2",
    "@monaco-editor/react": "^4.6.0",
    "@tabler/icons-react": "^3.10.0",
    "@types/color-convert": "^2.0.3",
    "color-convert": "^2.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.2.0",
    "electron-window-state": "^5.0.3",
    "isomorphic-git": "^1.27.1",
    "jotai": "^2.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-resizable-panels": "^2.0.20",
    "react-router-dom": "^6.24.1",
    "swiftlatex": "https://github.com/ducaale/SwiftLaTeX/releases/download/v1.0.0-experimental-9902734/swiftlatex-1.0.0-experimental-9902734.tgz",
    "tailwindcss": "^3.4.4",
    "update-electron-app": "^3.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/plugin-vite": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "classnames": "^2.5.1",
    "cross-env": "^7.0.3",
    "electron": "31.2.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.57.0",
    "eslint-config-flat-gitignore": "^0.1.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-tsdoc": "^0.3.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "icon-gen": "^4.0.0",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "postcss": "^8.4.39",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "sharp": "^0.33.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "vite": "^5.3.3",
    "vite-plugin-checker": "^0.7.1",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "npm run lint"
    ]
  }
}
